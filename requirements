#!/bin/bash
cp install ../; cd .. ; chmod +x install; clear; echo -e "\033[1;35mAdding CUDA Paths...\033[0m"; echo 'export CUDA_HOME=/usr/local/cuda-11.7' >> ~/.bashrc; echo 'export LD_LIBRARY_PATH=${CUDA_HOME}/lib64:$LD_LIBRARY_PATH' >> ~/.bashrc; echo 'export PATH=${CUDA_HOME}/bin:${PATH}' >> ~/.bashrc; echo -e "\033[1;34mAdding Universe APT repository to Ubuntu, insert your password:\033[0m"; sudo add-apt-repository universe -y > /dev/null; mkdir webui; cd webui; echo -e "\033[1;32mDownloading CUDA v11.7.0 ...\033[0m"; echo -e "\033[1;96m$(wget https://developer.download.nvidia.com/compute/cuda/11.7.0/local_installers/cuda_11.7.0_515.43.04_linux.run)\033[0m"; echo -e "\033[1;37mUpdating Ubuntu...\033[0m"; cd ..; sudo apt-get update > /dev/null 2>&1; sudo apt-get upgrade -y > /dev/null 2>&1; echo -e "\033[1;37mInstalling build-essential...\033[0m"; sudo apt install build-essential -y > /dev/null 2>&1; echo -e "\033[1;37mInstalling Aria2 (to download model)...\033[0m"; sudo apt-get install aria2 -y > /dev/null; echo -e "\033[1;32mDownloading Miniconda ...\033[0m"; cd webui; wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh > /dev/null 2>&1; echo -e "\033[1:37mInstalling Miniconda ...\033[0m"; bash Miniconda3-latest-Linux-x86_64.sh -b > /dev/null 2>&1; source ~/miniconda3/etc/profile.d/conda.sh; echo -e "\033[1:35mActivating Miniconda ...\033[0m"; . ~/.bashrc; ~/miniconda3/bin/conda init > /dev/null 2>&1; conda update -n base -c defaults conda --yes > /dev/null 2>&1; conda config --set channel_priority false; echo -e "\033[1;34mAll done, you can close this window now ...\033[0m"; sleep 3; exit
