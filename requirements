#!/bin/bash
cp install ../; cd .. ; chmod +x install; echo -e "\033[32mPrepare to insert your password ...\033[0m"; sleep 2; clear; echo -e "\033[32mAdding CUDA Paths...\033[0m"; echo 'export CUDA_HOME=/usr/local/cuda-11.7' >> ~/.bashrc; echo 'export LD_LIBRARY_PATH=${CUDA_HOME}/lib64:$LD_LIBRARY_PATH' >> ~/.bashrc; echo 'export PATH=${CUDA_HOME}/bin:${PATH}' >> ~/.bashrc; echo -e "\033[32mAdding Universe APT repository to Ubuntu...\033[0m"; echo -e "\033[31mInsert your password...\033[0m"; sudo add-apt-repository universe -y > /dev/null; echo -e "\033[32mUpdating Ubuntu...\033[0m"; sudo apt-get update > /dev/null 2>&1; sudo apt-get upgrade -y > /dev/null 2>&1; echo -e "\033[32mInstalling build-essential...\033[0m"; sudo apt install build-essential -y > /dev/null 2>&1; echo -e "\033[32mInstalling Aria2 (to download model)...\033[0m"; sudo apt-get install aria2 -y > /dev/null; echo -e "\033[32mDownloading Miniconda ...\033[0m"; mkdir webui; cd webui; wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh > /dev/null 2>&1; echo -e "\033[32mInstalling Miniconda ...\033[0m"; bash Miniconda3-latest-Linux-x86_64.sh -b -f -p ~/miniconda3 > /dev/null 2>&1;  echo -e "\033[32mDownloading CUDA v11.7.0 ...\033[0m"; wget https://developer.download.nvidia.com/compute/cuda/11.7.0/local_installers/cuda_11.7.0_515.43.04_linux.run > /dev/null 2>&1; sudo sh cuda_11.7.0_515.43.04_linux.run --silent --override; echo -e "\033[32mAll done, you can close this window now...\033[0m"
