#!/bin/bash
echo -e "\033[32mRunning installation in 3s, prepare to insert your password ...\033[0m"; sleep 3; clear; echo -e "\033[32mAdding CUDA Paths...\033[0m"; echo 'export CUDA_HOME=/usr/local/cuda-11.7' >> ~/.bashrc; echo 'export LD_LIBRARY_PATH=${CUDA_HOME}/lib64:$LD_LIBRARY_PATH' >> ~/.bashrc; echo 'export PATH=${CUDA_HOME}/bin:${PATH}' >> ~/.bashrc; echo -e "\033[32mAdding Universe APT repository to Ubuntu...\033[0m"; echo -e "\033[31mInsert your password...\033[0m"; sudo add-apt-repository universe -y > /dev/null; echo -e "\033[32mUpdating Ubuntu...\033[0m"; sudo apt-get update > /dev/null 2>&1; sudo apt-get upgrade -y > /dev/null 2>&1; echo -e "\033[32mInstalling build-essential...\033[0m"; sudo apt install build-essential -y > /dev/null 2>&1; echo -e "\033[32mInstalling Aria2 (to download model)...\033[0m"; sudo apt-get install aria2 -y > /dev/null; chmod +x install; echo -e "\033[32mAll done, you can close this window now...\033[0m"
