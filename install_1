clear && mkdir txtgen && cd txtgen && echo -e "\033[32mDownloading Miniconda ...\033[0m" && wget https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh > /dev/null 2>&1 && echo -e "\033[32mDownloading CUDA v11.7.0 ...\033[0m" && wget https://developer.download.nvidia.com/compute/cuda/11.7.0/local_installers/cuda_11.7.0_515.43.04_linux.run > /dev/null 2>&1 && echo -e "\033[32mInstalling Miniconda ...\033[0m" && bash Miniconda3-latest-Linux-x86_64.sh -b -f -s -p ~/miniconda3 > /dev/null 2>&1 && echo -e "\033[32mActivating Conda ...\033[0m" && ~/miniconda3/bin/conda init > /dev/null
